<div class="login-form">
    <form>
        <h1>Регистрация</h1>

        {{> form-field/form-field label="Почта" name="email" type="text" }}
        {{> form-field/form-field label="Логин" name="login" type="text" }}
        {{> form-field/form-field label="Имя" name="first_name" type="text" }}
        {{> form-field/form-field label="Фамилия" name="second_name" type="text" }}
        {{> form-field/form-field label="Телефон" name="phone" type="text" }}
        {{> form-field/form-field label="Пароль" name="password" type="password" }}
        {{> form-field/form-field label="Пароль (ещё раз)" name="re-password" type="password" }}

        <div class="login-form__buttons">
            <button type="submit">Зарегистрироваться</button>
            <a href="#">Войти</a>
        </div>
    </form>
</div>
